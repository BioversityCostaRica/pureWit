
@{

    Layout = "~/Views/Shared/Master.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<div class="col-lg-6">
    <div class="card card-outline-primary">
        <div class="card-header">
            <h4 class="m-b-0 text-white">Mensajes</h4>
        </div>
        <div class="card-body">
            <div id="principal" class="recent-comment">




            </div>
            <br />
            <br />
            <div class="col-lg-12">
                <input type="text" class="form-control" /><button class="btn btn-purple waves-effect waves-light"> <span>Enviar</span> <i class="fa fa-send m-l-10"></i> </button>
            </div>
        </div>
    </div>
</div>


   
    </div>
</div>

<script>

    $(document).ready(function () {

        var prueba = @ViewBag.Contacto

            alert(prueba);
        getPerfilesUsuarios();
    });

     function getPerfilesUsuarios() {

        var prueba = @ViewBag.Contacto
        var usuario = "@ViewBag.prueba"
        $.ajax({
            url: '/Respuestas/ListarMensajes',
            data: { "Id_Contacto": prueba },
            type: 'GET',
                success: function (response) {
                    $.each(response, function (i, item) {



                        if (item.Estado == 5) {

                            $("#principal").append(
                                "<div class='col - md - 3'>" +
                                "<div class= 'card bg-primary p-20' >" +
                                "<div class='media'>" +
                                "<div class='media-left'> " +
                                "<a href='#' class='fa fa-user'></a>" +
                                "</div>" +
                                "  <div class='media-body'> " +
                                "   <h4 class='media-heading'>" + item.Nombre + "</h4> " +
                                "   <p>'" + item.Mensaje + "'</p> " +
                                "   <p class='comment-date'>27/07/2018</p> " +
                                " </div> " +
                                " </div >" +
                                " </div> " +
                                " </div >")

                        } else {
                            if (item.Estado == 4) {

                                $("#principal").append(
                                    "<div class='media'>" +
                                    "<div class='media-left'> " +
                                    "<a href='#' class='fa fa-user'></a>" +
                                    "</div>" +
                                    "  <div class='media-body'> " +
                                    "   <h4 class='media-heading'>" + usuario + "</h4> " +
                                    "   <p>'" + item.Mensaje + "'</p> " +
                                    "   <p class='comment-date'>27/07/2018</p> " +
                                    " </div> " +
                                    " </div >")
                            }
                        }

                        });
            }
        });
    }




</script>
