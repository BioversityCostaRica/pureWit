
@model WiserSoft.UI.Models.Mensajes
@{
    ViewBag.Title = "Nuevo Mensaje";
    Layout = "~/Views/Shared/Master.cshtml";
}
<div class="card" style="width:700px; height:auto">
    <div class="card-body">
        <h2>Ingresar Nuevo Mensaje</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    Usuario
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    Mensaje
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cuerpo_Mensaje, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cuerpo_Mensaje, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                        @Html.Label("Tipo de mensaje:", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Id_Tipo_Mensaje, new SelectList(ViewBag.ListasTipoMensaje, "Value", "Text"), "Seleccione un tipo de mensaje:", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id_Tipo_Mensaje, "", new { @class = "text-danger" })
                </div>
               <center>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">
                            <i class="fa fa-save"></i>Guardar
                        </button>
                        <span>
                            <a href="@Url.Action("Index")" class="btn btn-dark btn-flat m-b-30 m-t-30">
                                <span class="fa fa-times">Cancelar</span>
                            </a>
                        </span>
                    </div>
                </div>
                </center>
            </div>
        }
    </div>
</div>